# =============================================================================
# = Proxmox Connection =========================================================
# =============================================================================

proxmox_endpoint = "https://proxmox.example.com:8006"
proxmox_insecure = true
proxmox_node     = "lloyd"

# =============================================================================
# = Template Configuration =====================================================
# =============================================================================

template_name = "ubuntu-22-04-template"
template_id   = 2006

# =============================================================================
# = Cloud Image Download =======================================================
# =============================================================================

# Ubuntu 22.04 LTS (Jammy Jellyfish)
cloud_image_url      = "https://cloud-images.ubuntu.com/jammy/current/jammy-server-cloudimg-amd64.img"
cloud_image_filename = "ubuntu-22.04-server-cloudimg-amd64.img"

# Optional: Verify download integrity (recommended for production)
# Get checksum from: https://cloud-images.ubuntu.com/jammy/current/SHA256SUMS
# cloud_image_checksum = "abc123def456..."  # Just the hash value, no "sha256:" prefix

# Alternative cloud images:
#
# Ubuntu 24.04 LTS (Noble Numbat)
# cloud_image_url = "https://cloud-images.ubuntu.com/noble/current/noble-server-cloudimg-amd64.img"
# cloud_image_filename = "ubuntu-24.04-cloudimg-amd64.img"
#
# Debian 12 (Bookworm)
# cloud_image_url = "https://cloud.debian.org/images/cloud/bookworm/latest/debian-12-generic-amd64.qcow2"
# cloud_image_filename = "debian-12-cloudimg-amd64.qcow2"
#
# Rocky Linux 9
# cloud_image_url = "https://download.rockylinux.org/pub/rocky/9/images/x86_64/Rocky-9-GenericCloud-Base.latest.x86_64.qcow2"
# cloud_image_filename = "rocky-9-cloudimg-amd64.qcow2"

# =============================================================================
# = Storage ====================================================================
# =============================================================================

# Cloud image download storage (must be file-based, typically 'local')
cloud_image_datastore = "local"

# VM disk storage (can be block-based like 'local-lvm' or file-based like 'local')
datastore = "local-lvm"

# =============================================================================
# = Network ====================================================================
# =============================================================================

network_bridge = "vmbr0"
